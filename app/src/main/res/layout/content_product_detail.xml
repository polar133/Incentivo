<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_product_detail"
    tools:context="com.monkeycoders.incentavo.incentivo.activities.ProductDetailActivity">

    <com.nirhart.parallaxscroll.views.ParallaxScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:parallax_factor="1.9" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/product_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ececec"
                    android:scaleType="fitXY"/>

                <TextView
                    android:id="@+id/product_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35dp"
                    android:textColor="@android:color/white"
                    android:padding="15dp"
                    style="@style/Base.TextAppearance.AppCompat.SearchResult.Title"
                    android:layout_gravity="left|bottom" />

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35dp"
                    android:textColor="@android:color/white"
                    android:padding="15dp"
                    style="@style/Base.TextAppearance.AppCompat.SearchResult.Title"
                    android:layout_gravity="right|top" />

            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">

                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_myplaces"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingLeft="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            style="@style/Base.TextAppearance.AppCompat.Title"
                            android:text="Meta"/>

                        <TextView
                            android:id="@+id/product_missing_days"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                            android:text="15 DÃ­as"/>

                    </LinearLayout>
                    
                </LinearLayout>

                <lecho.lib.hellocharts.view.PieChartView
                    android:id="@+id/chart"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="250dp" >
                </lecho.lib.hellocharts.view.PieChartView>


            </LinearLayout>
        </LinearLayout>

    </com.nirhart.parallaxscroll.views.ParallaxScrollView>

</RelativeLayout>
